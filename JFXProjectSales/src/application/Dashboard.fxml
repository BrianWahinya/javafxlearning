<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DashboardController">
   <center>
      <BorderPane fx:id="dashBorderPane" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="mnItemClose" mnemonicParsing="false" onAction="#actionClose" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <right>
      <VBox prefHeight="400.0" prefWidth="60.0" style="-fx-background-color: #e5f0f8;" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="794.0" spacing="10.0" style="-fx-background-color: #e5f0f8;" BorderPane.alignment="BOTTOM_RIGHT">
         <children>
            <Pane nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="710.0">
               <children>
                  <Label fx:id="lblUsername" alignment="CENTER" contentDisplay="CENTER" layoutX="-6.0" prefHeight="20.0" prefWidth="34.0" text="User" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Button fx:id="btnLogout" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#actionLogout" style="-fx-background-color: #bd5757;" text="Logout" textAlignment="CENTER" textFill="WHITE" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <left>
      <VBox prefHeight="400.0" prefWidth="134.0" spacing="10.0" style="-fx-background-color: #e5f0f8;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btnUsers" mnemonicParsing="false" onAction="#actionLoadUsersDashboard" prefHeight="25.0" prefWidth="90.0" text="Users" />
            <Button fx:id="btnLevels" mnemonicParsing="false" onAction="#actionLoadLevelsDashboard" prefHeight="25.0" prefWidth="90.0" text="Levels" />
            <Button fx:id="btnSubjects" mnemonicParsing="false" onAction="#actionLoadSubjectsDashboard" prefHeight="25.0" prefWidth="90.0" text="Subjects" />
            <Button fx:id="btnBooks" mnemonicParsing="false" onAction="#actionLoadBooksDashboard" prefHeight="25.0" prefWidth="90.0" text="Books" />
         </children>
      </VBox>
   </left>
</BorderPane>
